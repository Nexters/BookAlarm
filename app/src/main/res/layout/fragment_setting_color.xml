<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_s"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"/>


    <TextView
        android:text="@string/color_question_text"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:textColor="@color/black"
        android:id="@+id/color_text" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/setting_color_group"
        android:layout_marginTop="250dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:text="@string/color_black"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/setting_color_black"
                    android:button="@null"
                    android:textColor="@drawable/radio_text"
                    android:drawableLeft="@drawable/radio_button"
                    android:drawablePadding="10dp"/>

                <RadioButton
                    android:text="@string/color_purple"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/setting_color_purple"
                    android:button="@null"
                    android:textColor="@drawable/radio_text"
                    android:layout_marginLeft="70dp"
                    android:drawableLeft="@drawable/radio_button"
                    android:drawablePadding="10dp"/>

                <RadioButton
                    android:text="@string/color_green"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/setting_color_green"
                    android:button="@null"
                    android:textColor="@drawable/radio_text"
                    android:drawableLeft="@drawable/radio_button"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="65dp"
                    />
            </LinearLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="67dp">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:text="@string/color_sky"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/setting_color_sky"
                    android:button="@null"
                    android:textColor="@drawable/radio_text"
                    android:drawableLeft="@drawable/radio_button"
                    android:drawablePadding="10dp"/>

                <RadioButton
                    android:text="@string/color_blue"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/setting_color_blue"
                    android:button="@null"
                    android:textColor="@drawable/radio_text"
                    android:layout_marginLeft="70dp"
                    android:drawableLeft="@drawable/radio_button"
                    android:drawablePadding="10dp"/>

                <RadioButton
                    android:text="@string/color_yellow"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/setting_color_yellow"
                    android:button="@null"
                    android:textColor="@drawable/radio_text"
                    android:drawableLeft="@drawable/radio_button"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="65dp"
                    />
            </LinearLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="67dp">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:text="@string/color_red"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/setting_color_red"
                    android:button="@null"
                    android:textColor="@drawable/radio_text"
                    android:drawableLeft="@drawable/radio_button"
                    android:drawablePadding="10dp"/>

                <RadioButton
                    android:text="@string/color_pink"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/setting_color_pink"
                    android:button="@null"
                    android:textColor="@drawable/radio_text"
                    android:layout_marginLeft="70dp"
                    android:drawableLeft="@drawable/radio_button"
                    android:drawablePadding="10dp"/>

                <RadioButton
                    android:text="@string/color_white"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/setting_color_white"
                    android:button="@null"
                    android:textColor="@drawable/radio_text"
                    android:drawableLeft="@drawable/radio_button"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="65dp"
                    />
            </LinearLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </RadioGroup>

    <Button
        android:text="@string/next"
        android:background="@color/transpaernt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="18sp"
        android:id="@+id/setting_color_button"/>

</RelativeLayout>