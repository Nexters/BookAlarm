    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/setting_color_text"
        android:textSize="30dp"
        android:text="어떤 색을 좋아해요?" />

    <Button
        android:text="다음"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:id="@+id/setting_color_button"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/setting_gender_text"
        android:layout_marginTop="150dp"
        android:id="@+id/setting_color_group">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting_color_group1"
            android:layout_marginLeft="20dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setting_color_purple"
                android:text="보라"
                android:textSize="20dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setting_color_blue"
                android:text="파랑"
                android:textSize="20dp"
                android:layout_marginTop="50dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setting_color_pink"
                android:text="분홍"
                android:textSize="20dp"
                android:layout_marginTop="50dp"/>
        </RadioGroup>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting_color_group2"
            android:layout_marginLeft="40dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setting_color_black"
                android:text="검정"
                android:textSize="20dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setting_color_sky"
                android:text="하늘"
                android:textSize="20dp"
                android:layout_marginTop="50dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setting_color_red"
                android:text="빨강"
                android:textSize="20dp"
                android:layout_marginTop="50dp"/>
        </RadioGroup>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting_color_group3"
            android:layout_marginLeft="40dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setting_color_green"
                android:text="초록"
                android:textSize="20dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setting_color_yelow"
                android:text="노랑"
                android:textSize="20dp"
                android:layout_marginTop="50dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setting_color_white"
                android:text="하양"
                android:textSize="20dp"
                android:layout_marginTop="50dp"/>
        </RadioGroup>
    </RadioGroup>
