<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_finish">

    <TextView
        android:text="우리는 지금 이시간,\n책을 찾는 당신과\n어울리는 신간을\n추천해 줄게요."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:gravity="start"
        android:layout_marginLeft="145.3dp"
        android:layout_marginTop="15.3dp"
        android:textSize="23.3sp"
        android:id="@+id/textView" />

    <Button
        android:text="@string/next"
        android:alpha="0.6"
        android:background="@drawable/button_custom"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55.3dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="16sp"
        android:id="@+id/setting_finish_button"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_white"
        android:onClick="backButtonClick"
        android:background="@android:color/transparent"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="17.7dp"
        android:id="@+id/back_button" />
</RelativeLayout>