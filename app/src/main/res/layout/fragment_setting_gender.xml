<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical" android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/background_gender">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="17.7dp"
        android:layout_marginEnd="37.3dp"
        android:layout_marginRight="37.3dp"
        android:id="@+id/setting_gender_text"
        android:text="@string/gender_question_text"
        android:textSize="23.3sp"/>


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="157dp"
        android:layout_marginRight="40dp"
        android:id="@+id/setting_gender_group">

        <RadioButton
            android:id="@+id/setting_gender_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_male"
            android:textSize="20sp"
            android:layout_marginBottom="25dp"/>

        <RadioButton
            android:id="@+id/setting_gender_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_female"
            android:textSize="20sp"
            android:layout_marginBottom="25dp"/>

    </RadioGroup>

    <Button
        android:text="@string/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="139.3dp"
        android:layout_marginBottom="55.3dp"
        android:layout_marginRight="139.3dp"
        android:id="@+id/setting_gender_button"
        android:textAlignment="center"
        android:textSize="16sp"
    />

</RelativeLayout>