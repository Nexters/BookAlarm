<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/setting_gender_text"
        android:text="성별이 뭐에요?"
        android:textSize="30dp"/>

    <Button
        android:text="다음"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:id="@+id/setting_gender_button"
        />

<!--    <CheckBox
        android:text="여자에요"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setting_gender_female"
        android:layout_above="@+id/setting_gender_button"
        android:layout_alignLeft="@+id/setting_gender_male"
        android:layout_alignStart="@+id/setting_gender_male"
        android:layout_marginBottom="54dp"
        android:textSize="20dp"
        />

    <CheckBox
        android:text="남자에요"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setting_gender_male"
        android:layout_below="@+id/setting_gender_text"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:textSize="20dp"/>-->

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/setting_gender_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:id="@+id/setting_gender_group">

        <RadioButton
            android:id="@+id/setting_gender_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="남자에요"
            android:textSize="20dp"
            android:layout_marginBottom="54dp"/>

        <RadioButton
            android:id="@+id/setting_gender_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="여자에요"
            android:textSize="20dp"/>

    </RadioGroup>

</RelativeLayout>