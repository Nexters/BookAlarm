<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/setting_blood_text"
        android:text="혈액형이 뭐에요?"
        android:textSize="30dp"/>

    <Button
        android:text="다음"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:id="@+id/setting_blood_button"/>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/setting_blood_group"
        android:layout_below="@+id/setting_gender_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp">

        <RadioButton
            android:id="@+id/setting_blood_o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="O형"
            android:textSize="20dp"
            android:layout_marginBottom="25dp"/>

        <RadioButton
            android:id="@+id/setting_blood_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="B형"
            android:textSize="20dp"
            android:layout_marginBottom="25dp"/>

        <RadioButton
            android:id="@+id/setting_blood_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="A형"
            android:textSize="20dp"
            android:layout_marginBottom="25dp"/>

        <RadioButton
            android:id="@+id/setting_blood_ab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="AB형"
            android:textSize="20dp"
            android:layout_marginBottom="25dp"/>
    </RadioGroup>

