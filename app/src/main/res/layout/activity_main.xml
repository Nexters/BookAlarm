<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nexters.paperfume.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:id="@+id/mainBack"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/logo_s_2"></ImageView>
        </RelativeLayout>

        <me.crosswall.lib.coverflow.core.LinkagePagerContainer
            android:id="@+id/book_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <android.support.v4.view.LinkagePager
                android:id="@+id/cover"
                android:layout_width="155dp"
                android:layout_height="223dp"
                android:layout_gravity="center"
                android:layout_marginBottom="35dp"/>

        </me.crosswall.lib.coverflow.core.LinkagePagerContainer>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.nexters.paperfume.util.SecretTextView
            android:id="@+id/text"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
